<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="com.group14.termproject.client.controller.MainMenuController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10" stylesheets="@style.css">
<padding>
    <Insets top="40" right="40" bottom="40" left="40"/>
</padding>
<columnConstraints>
    <ColumnConstraints minWidth="400" prefWidth="400"
                       maxWidth="500" hgrow="ALWAYS">
    </ColumnConstraints>
</columnConstraints>
<Label text="Main Menu" GridPane.columnIndex="0"
       GridPane.rowIndex="0" GridPane.columnSpan="1"
       GridPane.rowSpan="1" GridPane.halignment="CENTER" styleClass="title-label">
    <GridPane.margin>
        <Insets top="20" bottom="20"/>
    </GridPane.margin>
</Label>
<Button fx:id="gameStartButton" text="Start Game"
        prefWidth="400" prefHeight="40" defaultButton="true"
        GridPane.columnIndex="0" GridPane.rowIndex="1"
        GridPane.columnSpan="2" GridPane.rowSpan="1"
        GridPane.halignment="CENTER"
        onAction="#onStartGameClick" styleClass="button-label-base, button-label">
    <GridPane.margin>
        <Insets top="20" bottom="5"/>
    </GridPane.margin>
</Button>
<Button fx:id="leaderboardButton" text="Leaderboard"
        prefWidth="400" prefHeight="40" defaultButton="true"
        GridPane.columnIndex="0" GridPane.rowIndex="2"
        GridPane.columnSpan="2" GridPane.rowSpan="1"
        GridPane.halignment="CENTER"
        onAction="#onLeaderboardButtonClick" styleClass="button-label-base, button-label">
    <GridPane.margin>
        <Insets top="5" bottom="5"/>
    </GridPane.margin>
</Button>
<Button fx:id="logoutButton" text="Logout"
        prefWidth="400" prefHeight="40" defaultButton="true"
        GridPane.columnIndex="0" GridPane.rowIndex="3"
        GridPane.columnSpan="2" GridPane.rowSpan="1"
        GridPane.halignment="CENTER"
        onAction="#onLogoutClick" styleClass="button-label-base, button-label">
    <GridPane.margin>
        <Insets top="5" bottom="5"/>
    </GridPane.margin>
</Button>
</GridPane>

